{
	"languageserver": {
		"ccls": {
		  "command": "ccls",
		  "filetypes": ["c", "cpp", "objc", "objcpp"],
		  "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
		  "initializationOptions": {
			 "cache": {
			   "directory": "/tmp/ccls"
			 }
		  },
        },
        "latex": {
          "command": "texlab",
          //"ignoredRootPaths": ["~"],
          "filetypes": ["tex", "bib", "plaintex", "context"]
        }
  }
}
